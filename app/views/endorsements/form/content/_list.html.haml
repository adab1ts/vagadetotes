%header
  %h1= t('.title')

.panel.panel-default
  .table-responsive
    %table.table.table-condensed.table-striped
      %tbody
        - @endorsements.each do |e|
          %tr
            %td= fa_stacked_icon('group inverse', base: 'circle', class: 'pull-left') if e.group
            %td= "#{e.name} #{e.lastname}"
            %td= e.activity
  
%footer
  = will_paginate
