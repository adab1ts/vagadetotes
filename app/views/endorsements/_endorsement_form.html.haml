.row
  .col-md-8
    %header
      %h1 Endorsement form

    = form_for @endorsement, html: {class: 'form-horizontal', role: 'form'} do |f|
      .form-group
        = f.label :name, class: 'col-sm-2 control-label'
        .col-sm-4
          = f.text_field :name, autofocus: true, class: 'form-control'
      
      .form-group
        = f.label :lastname, class: 'col-sm-2 control-label'
        .col-sm-4
          = f.text_field :lastname, class: 'form-control'
      
      .form-group
        = f.label :doctype, class: 'col-sm-2 control-label'
        .col-sm-6
          = f.select :doctype, [['DNI', 'dni'], ['NIE', 'nie'], ['Passport', 'passport']]
          = f.text_field :docid, class: 'form-control'
      
      .form-group
        = f.label :email, class: 'col-sm-2 control-label'
        .col-sm-4
          = f.email_field :email, class: 'form-control'
      
      .form-group
        = f.label :birthdate, class: 'col-sm-2 control-label'
        .col-sm-8
          = f.date_select :birthdate, class: 'form-control'
      
      .form-group
        = f.label :postal_code, class: 'col-sm-2 control-label'
        .col-sm-4
          = f.text_field :postal_code, class: 'form-control'
      
      .form-group
        = f.label :activity, class: 'col-sm-2 control-label'
        .col-sm-4
          = f.text_field :activity, required: false, class: 'form-control'
      
      %hr
      
      .form-group
        .col-sm-offset-2.col-sm-6
          .chefbox
            %label
              = f.check_box :subscribed
              Subscribed
        .col-sm-offset-2.col-sm-6
          .chefbox
            %label
              = f.check_box :hidden
              Hidden
      
      .form-group
        .col-sm-offset-2.col-sm-6
          = f.submit 'Sign', class: 'btn btn-primary'